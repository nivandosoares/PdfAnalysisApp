@model IEnumerable<PdfAnalysisApp.Models.Request>

<h2>Requests Pendentes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var request in Model)
    {
        <tr>
            <td>@request.Name</td>
            <td>@request.Email</td>
            <td>@request.Status</td>
            <td>
                <a asp-action="Status" asp-route-id="@request.Id" class="btn btn-info">Visualizar</a>
                @if (request.Status == "Em análise")
                {
                    <a asp-action="Approve" asp-route-id="@request.Id" class="btn btn-success">Aprovar</a>
                    <a asp-action="Reject" asp-route-id="@request.Id" class="btn btn-danger">Rejeitar</a>
                }
                else
                {
                    <span>Processado</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
